{
  "manifest_version": 3,
  "name": "Balochi Input Tool",
  "version": "1.0",
  "description": "A browser extension to type in Balochi using a custom keyboard mapping.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
